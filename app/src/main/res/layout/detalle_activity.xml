<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/static_toolbar"></include>

    <android.support.v7.widget.CardView
        android:id="@+id/general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="@dimen/elevacion_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagen_fondo_detalle"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/evento_catolico"/>

                <TextView
                    android:id="@+id/rango_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="@color/icons"
                    android:textAlignment="textEnd"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="DE A "/>

            </FrameLayout>



            <TextView
                android:id="@+id/titulo_evento_general"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="@color/primary_text"
                android:text="Titulo del Evento"/>
            <TextView
                android:id="@+id/parroquia_evento_general"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/secondary_text"
                android:text="Nombre de la Parroquia"/>

            <TextView
                android:id="@+id/descripcion_general"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="Aca va la descripcion"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lista_reciclada_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            />

    </LinearLayout>


</LinearLayout>